<!DOCTYPE html>
<html>
    <head>
     <meta charset="utf-8">
     <meta http-equiv="x-ua-compatible" content="IE=edge, chrome=1">
     <meta name=viewport content="width=device-width, initial-scale=1">


     <title>The Sierra Leone Grammar School</title>
     <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
      integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
      <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
     <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
     <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js" integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI" crossorigin="anonymous"></script>
     <link rel="stylesheet" type="text/css" href="css/main.css">
    </head>

<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
          <a class="navbar-brand" href="/">SLGS</a>
          <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
            <li class="nav-item active">
              <a class="navbar-brand " href="#">STUDENT CENTER <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item active logout">
                <a class="navbar-brand " href="/logout">logout<span class="sr-only">(current)</span></a>
             </li>
            
          </ul>
          <form class="form-inline my-2 my-lg-0">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Home</button>
          </form>
        </div>
      </nav>

  <div class="row">
  <div class="container student-links">
    <nav class="navbar navbar-dark res-nav" style="background-color: #13036A;">
        <a class="navbar-brand">Campus Resources</a>
      </nav>
    <div class="card links-ls" style="width: 18rem;">
        <div class="card-header">School Resources</div>

        <ul class="list-group list-group-flush">
          <li class="list-group-item"><a href="#">Register for Classes</a></li>
          <li class="list-group-item"><a href="#">Check Transcript</a></li>
          <li class="list-group-item"><a href="/learning_center<%= user_id %>">Learning Center</a></li>
          <li class="list-group-item"><a href="#">Financial Services</a></li>
        </ul>
      </div>

      <div class="card links-ls" style="width: 18rem;">
        <div class="card-header">Personal Information</div>

        <ul class="list-group list-group-flush">
          <li class="list-group-item"><a href="#">Update Profile</a></li>
          <li class="list-group-item"><a href="#">Change Password and Username</a></li>
        </ul>
      </div>
  </div>

  <div class="container course-schedule">
    <div class="navbar navbar-dark sche-nav" style="background-color: #13036A;">
        <a class="navbar-brand">Course Schedule and Grades</a>
    </div>
    <div>
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
              <a class="nav-link active" id="schedule-tab" data-toggle="tab" href="#Schedule" role="tab" aria-controls="home" aria-selected="true">Course Schedule</a>
            </li>
            <li class="nav-item" role="presentation">
              <a class="nav-link" id="grade-tab" data-toggle="tab" href="#Grades" role="tab" aria-controls="profile" aria-selected="false">Grades</a>
            </li>

                <div class="dropdown">
                    <button class="btn  dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      <a class="s_dw">Fall</a>
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                      <a class="dropdown-item ls" href="#">Fall</a>
                      <a class="dropdown-item ls" href="#">Winter</a>
                      <a class="dropdown-item ls" href="#">Summer</a>
                    </div>
                  </div>

                  <li class="nav-item" role="presentation">
                    <a class="nav-link active" href="/student_center<%= user_id %>"> Refresh</a>
                  </li>
          </ul>
          
          <div class="tab-content">
            <div class="tab-pane active" id="Schedule" role="tabpanel" aria-labelledby="home-tab">
                <table class="table table-dark">
                    <thead>
                      <tr>
                        <th scope="col">Course</th>
                        <th scope="col">Instructor</th>
                        <th scope="col">Time</th>
                        <th scope="col">Days</th>
                        <th scope="col">Location</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% for(var i = 0; i < classes.length; i++) { %>
                        <tr>
                          <th scope="row"><%= classes[i].course_name %> </th>
                          <td><%= teachers[i].first_name + " " + teachers[i].last_name %> </td>
                          <td><%= classes[i].time_taught %> </td>
                          <td><%= classes[i].day_taught %> </td>
                          <td><%= classes[i].location %> </td>
                        </tr>
                        <% } %>
                    </tbody>
                  </table>
            </div>
            <div class="tab-pane grade-pane" id="Grades" role="tabpanel" aria-labelledby="grade-tab">Grades</div>
          </div>
          
          <script>
            $(function () {
              $('#myTab li:last-child a').tab('show')
            })
          </script>
          
      </div>
  </div>
  </div>
  </body>

  <script src="js/main.js"></script>


  </html>